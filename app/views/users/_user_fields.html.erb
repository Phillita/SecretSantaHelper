<%= f.input :first_name, autofocus: true, required: true, label_html: { class: 'hidden' }, placeholder: 'First Name' %>
<%= f.input :last_name, label_html: { class: 'hidden' }, placeholder: 'Last Name' %>
<%= f.input :email, as: :email, required: true, label_html: { class: 'hidden' }, placeholder: 'Email' %>
<%= f.input :guest, as: :hidden if guest %>
<%= f.input :id, as: :hidden if f.object.persisted? %>
