<% page_title('Change Password') %>
<div class="page-header">
  <h2>Change your password</h2>
</div>

<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.input :reset_password_token, as: :hidden %>

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.input :password, as: :password, autofocus: true, autocomplete: "off" %>
      <%= f.input :password_confirmation, as: :password, autocomplete: "off" %>
      <%= f.submit 'Change my password', class: 'btn btn-success' %>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
