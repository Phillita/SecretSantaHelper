<div class="row">
  <div class="col-lg-12">
    <h4>Emails have been sent to each person letting them know who they are giving to. Have fun!</h4>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table">
      <thead>
        <tr>
          <th colspan="3">Participants</th>
        </tr>
      </thead>
      <tbody>
        <% secret_santa.secret_santa_participants.each do |participant| %>
          <tr>
          <td><%= participant.name %></td>
          <td><%= participant.email %></td>
          <td>
            <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-envelope'), secret_santum_secret_santa_participant_resend_email_path(secret_santa, participant), title: 'Resend Email' if secret_santa.send_email? %>
            <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-pencil'), '#', title: 'Edit Participant' %>
          </td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 text-center top-10">
    <div class="btn-group text-center" role="group" aria-label="actions">
      <%= link_to 'Back', secret_santum_path(secret_santa), class: 'btn btn-default btn-lg' %>
    </div>
  </div>
</div>
