<%= content_tag :div, class: 'row' do %>
  <div class="col-lg-12">
    <div class="alert alert-warning text-center">
      <p>Note that this is a test and that nothing has been sent to the participants.</p>
    </div>
  </div>
<% end %>

<div class="row">
  <%= render partial: 'test_match', collection: secret_santa.secret_santa_participant_matches, as: :match  %>
</div>

<div class="row">
  <div class="col-lg-12 text-center top-10">
    <div class="btn-group text-center" role="group" aria-label="actions">
      <%= link_to 'Back', secret_santum_path(secret_santa), class: 'btn btn-default btn-lg' %>
      <%= link_to 'Edit', edit_secret_santum_path(secret_santa), class: 'btn btn-default btn-lg' %>
      <%= link_to 'Rerun', match_secret_santum_path(secret_santa, test: Time.now),  class: 'btn btn-default btn-lg', data: { turbolinks: 'false' } %>
    </div>
  </div>
</div>
