<% if secret_santa.complete? %>
  <div class="col-lg-offset-3 col-lg-6 text-center">
    <div class="alert alert-success">
      <p>This Secret Santa was last run on <%= secret_santa.last_run_on %>.</p>
    </div>
  </div>
  <div class="col-lg-offset-3 col-lg-3 text-center">
    <%= link_to 'Create New Secret Santa', new_secret_santum_path, class: 'btn btn-block btn-primary btn-lg' %>
  </div>
  <div class="col-lg-3 text-center">
    <%= link_to 'Clone This Sectret Santa', clone_secret_santum_path(secret_santa), class: 'btn btn-block btn-info btn-lg' %>
  </div>
<% else %>
  <%= content_tag :div, class: 'row' do %>
    <div class="col-lg-12">
      <div class="alert alert-info">
        <p>Currently the test flag is set to on and will not send the matches out to participants.</p>
        <p>Why you ask?</p>
        <ul>
          <%= content_tag :li, 'You have set the test flag below.' if secret_santa.test_run.present? %>
          <%= content_tag :li, 'You haven\'t selected for an email or file to be used.' if !secret_santa.send_file? && !secret_santa.send_email? %>
        </ul>
      </div>
    </div>
  <% end if secret_santa.test? %>

  <%= form_for secret_santa, url: match_secret_santum_path do |f| %>
    <div class="col-lg-offset-5 col-lg-1">
      <%= f.check_box :test_run,
                      {
                        data: {
                          size: 'medium',
                          on_color: 'success',
                          off_color: 'danger',
                          on_text: 'On',
                          off_text: 'Off',
                          label_text: 'Test'
                        }
                      },
                      secret_santa.test_run || Time.zone.now,
                      ''
      %>
    </div>
    <div class="col-lg-2">
      <%= f.submit 'Make Magic!', class: 'btn btn-success', disabled: !secret_santa.ready? %>
    </div>
  <% end %>
<% end %>
