<% page_title 'Home' %>

<div id="applications" class="row">
  <div class="col-lg-2">
    <div class="card" style="width: 20rem;">
      <%= image_tag 'secret_santa_hero', class: 'card-img-top', alt: 'Secret Santa' %>
      <div class="card-block">
        <h4 class="card-title">Secret Santa</h4>
        <p class="card-text">Create your own custom Secret Santa! Free!</p>
        <%= link_to 'Start', new_secret_santum_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="col-lg-2">
    <div class="card" style="width: 20rem;">
      <%= image_tag 'gift_exchange_hero', class: 'card-img-top', alt: 'Gift Exchange' %>
      <div class="card-block">
        <h4 class="card-title">Gift Exchange</h4>
        <p class="card-text">Host a gift exchange using your smartphone!</p>
        <%= link_to 'Start', '#', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
